<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(:header_logo), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("header_menu.home"), root_path %></li>
        <li><%= link_to t("header_menu.help"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to "Users", "#" %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "header_menu.account" %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("header_menu.profile"), current_user %></li>
              <li><%= link_to t("header_menu.settings"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("header_menu.logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("header_menu.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
