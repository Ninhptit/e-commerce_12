<li class="media" id="commment_<%= comment.id %>">
  <div class="pull-left" href="#">
    <%= image_tag comment.user.avatar, class: "img-circle img-responsive", style:"max-width: 80px"%>
  </div>
  <div class="media-body">
    <div class="well well-sm">
      <div class="media-heading">
        <div class="pull-left comment-user-name">
          <%= comment.user.name %>
        </div>
         <div class="pull-right">
          <%= comment.show_time_create %>
        </div>
        <div class="clearfix"></div>
      </div>
      <p class="media-comment" style="white-space: pre-line;">
        <%= comment.description %>
        <% if current_user && current_user.admin? %>
          <%= link_to product_comment_path(@product.id, comment.id), method: :delete, remote: true ,class:"pull-right", data: { confirm: 'Are you sure?' } do %>
            <icon class="fa fa-trash fa-1x"></icon>
          <% end %>
        <% end %>
      </p>
    </div>
  </div>
  <div class="clearfix"></div>
</li>
