<%= form_with model: @product.comments.build, url: product_comments_path(@product.id), 
  method: :post, class: "form-horizontal" do |f| %>
  <div class="form-group">
    <%= f.label :description,"Comment",class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_area :description,size: "10x5", class: "form-control " %>
    </div>
  </div>
  <div class="form-group">
    <div class="text-right">
      <%= f.submit t(.send), class: "btn btn-md btn-success "%>
    </div>
  </div>         
<% end %>
