<fieldset class="field">
  <h4 class="text-center"><%= t "type_product" %></h4>
  <div class="form-group field">
    <%= f.label :quantity %>
    <%= f.number_field :quantity, step: 1, min: 0, class: "form-control" %>
  </div>
  <div class="form-group field">
    <%= f.label :size %>
    <%= f.number_field :size, min: 30, class: "form-control" %>
  </div>
  <div class="form-group field">
    <%= f.label :color %>
    <%= f.text_field :color, class: "form-control" %>
  </div>
  <%= f.check_box :_destroy %>
  <%= f.label :_destroy, t("remove_type_product") %>
</fieldset>
