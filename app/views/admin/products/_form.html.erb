<div class="col-xs-10 col-xs-offset-1 col-sm-10 col-sm-offset-1 col-md-8 col-offset-2 col-lg-8 col-lg-offset-2">
  <%= form_for [:admin, @product] do |f| %>
    <%= render "shared/error_messages", object: f.object %>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :price %>
      <%= f.number_field :price, step: 0.01, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :descriptions %>
      <%= f.text_area :descriptions, size: "10x10", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :category_id %>
      <%= f.collection_select :category_id, Category.all, :id, :name, prompt: true, class: "form-control" %>
    </div>

    <div class="text-center">
      <%= f.submit yield(:btn_text), class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
