<% provide :title, t(".title") %>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-primary">
        <div class="panel-heading">
          <div class="h2 text-center"><%= t ".title" %></div>
        </div>
      </div>
      <div class="panel-body">
        <!-- search box -->
        <div class="row">
          <div class="col-md-8 col-md-offset-2">
            <%= form_tag admin_type_products_path, method: :get do %>
              <div class="input-group">
                <%= text_field_tag "search", params[:search], placeholder: t(".placeholer"), class: "form-control"%>
                <div class="input-group-btn">
                  <%= button_tag(type: "submit", class: "btn btn-default") do %>
                    <i class="fa fa-search"></i>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
        <!-- close search box -->
        <!-- table product -->
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th><%= sort_link t(".product_id") %></th>
              <th><%= t(".product_name") %></th>
              <th><%= sort_link t(".color") %></th>
              <th><%= sort_link t(".quantity") %></th>
              <th><%= sort_link t(".size") %></th>
              <th colspan="2"><%= t(".function") %></th>
            </tr>
          </thead>
          <tbody>
            <%= render partial: "type_product", collection: @type_products %>
          </tbody>
        </table>
        <!-- close table product -->
        <div class="text-center">
          <%= paginate @type_products, theme: "twitter-bootstrap-3" %>
        </div>
      </div>
    </div>
  </div>
</div>

