<div class="col-xs-10 col-xs-offset-1 col-sm-10 col-sm-offset-1 col-md-8 col-offset-2 col-lg-8 col-lg-offset-2">
  <%= form_for [:admin, @promotion] do |f| %>
    <%= render "shared/error_messages", object: f.object %>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, size: "10x10", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :start_date %>
      <%= f.date_field :start_date, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :end_date %>
      <%= f.date_field :end_date, class: "form-control" %>
    </div>

    <%= link_to_add_fields "Add a Contact", f, :product_promotions %>

    <div class="new-field">
      <%= f.fields_for :product_promotions do |builder| %>
        <%= render "product_promotion_fields", f: builder %>
      <% end %>
    </div>

    <div class="text-center">
      <%= f.submit yield(:btn_text), class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
