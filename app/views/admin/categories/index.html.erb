<% provide :title, t(:home_title) %>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-primary">
        <div class="panel-heading">
          <div class="h2 text-center"><%= t ".title" %></div>
        </div>
      </div>
      <div class="panel-body">
        <!-- search box -->
        <div class="row">
          <div class="col-md-8 col-md-offset-2">
            <%= form_tag admin_categories_path, method: :get do %>
              <div class="input-group">
                <%= text_field_tag "search", params[:search], placeholder: t(".placeholer"), class: "form-control"%>
                <div class="input-group-btn">
                  <%= button_tag(type: "submit", class: "btn btn-default") do %>
                    <i class="fa fa-search"></i>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
        <!-- close search box -->
        <!-- button new category -->
        <div class="text-right">
          <%= link_to new_admin_category_path, class: "btn btn-primary" do %>
           <i class="fa fa-plus fa-2x" aria-hidden="true"></i>
          <% end %>
        </div>
        <!-- close button new category -->
        <!-- table category -->
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th><%= t ".id" %></th>
              <th><%= sort_link t(".name") %></th>
              <th colspan="2"></th>
            </tr>
          </thead>
          <tbody>
            <%= render partial: "category", collection: @categories %>
          </tbody>
        </table>
        <!-- close table category -->
        <div class="text-center">
          <%= paginate @categories, theme: "twitter-bootstrap-3" %>
        </div>
      </div>
    </div>
  </div>
</div>
