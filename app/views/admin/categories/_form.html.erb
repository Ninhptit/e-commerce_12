<div class="col-xs-10 col-xs-offset-1 col-sm-10 col-sm-offset-1 col-md-8 col-offset-2 col-lg-8 col-lg-offset-2">
  <%= form_for @category do |f| %>
    <%= render "shared/error_messages", object: f.object %>
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
    <div class="text-center">
      <%= f.submit yield(:btn_text), class: "btn btn-primary mt-1" %>
    </div>
  <% end %>
</div>
