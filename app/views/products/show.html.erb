<div class="row">
  <div class="col-sm-4">
    <%= image_tag @product.type_products.first.show_img, class: "Card image cap"%>
  </div>
  <div class="col-md-offset-2"></div>
  <div class="col-sm-6 mt-30">
    <div class="detail">
      <h1 class="name"><%= @product.name %></h1>
      <%= form_for(@order, remote: true, class: "add_cart" )do |f| %>

        <%= f.fields_for :order_details do |ff| %>
        <% if @product.promotions.check_sale.present? %>
        <p class="price_old">
        <%= @product.price.to_s %>
        </p>
        <p class="price_new">
          <%= ff.text_field :price, :value => @product.get_price_sale_in_day.to_s %>
        </p>
        <p class="sale_off">
        <span class="price-label"><%= t ".saving" %></span>
        <span class="discount-percent"><%= @product.get_sale_in_day %>%</span>
          <span id="span-saving-price"></span>
        </p>
        <% else %>
          <p class="price">
          <%= ff.text_field :price, :value => @product.price.to_s %>
          </p>
        <% end %>
        <p><%= @product.descriptions %></p>
        <%= ff.collection_select(:type_product_id, @product.type_products, :id, :size) %>
        <%= ff.number_field :quantity, :value => 1 %>

        <% end %>
         <%= f.submit "Cart Shopping", class: "btn btn-success"%>
      <% end %>
      <span>
        <i class="fa fa-star" aria-hidden="true"></i>
        <i class="fa fa-star" aria-hidden="true"></i>
        <i class="fa fa-star" aria-hidden="true"></i>
        <i class="fa fa-star" aria-hidden="true"></i>
        <i class="fa fa-star" aria-hidden="true"></i>
        <i class="fa fa-star" aria-hidden="true"></i>
      </span>
    </div>
  </div>
</div>

<script>
  $(document).ready(function(){
    $('#new_order').on('ajax:success', function(e, xhr, status, error){
      console.log(e);
    }).on('ajax:error',function(e, xhr, status, error){
      console.log("fail");
    });
  });
</script>
