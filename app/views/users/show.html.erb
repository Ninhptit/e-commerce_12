<% provide :title, @user.name %>
<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <div class="row">
      <!-- avatar -->
      <div class="col-xs-12 col-sm-12 col-md-4 col-lg-2">
        <div class="profile">
          <p class="image"> <%= gravatar_for @user %> </p>
        </div>
        <div class="profile">
          <p class="name"> <%= t ".account_user" %>
            <h6><%= @user.name %></h6>
          </p>
        </div>
      </div>
      <!-- close avatar -->
      <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-md-offset-2">
        <h1 class="have-margin"><%= t ".account_info" %></h1>
          <div class="account-profile">
            <%= form_for @user do |f| %>
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-user icon"></i></span>
                <%= f.text_field :name, class: "form-control well well-sm", disabled: true %>
              </div>
              <br>
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-envelope icon"></i></span>
                <%= f.email_field :email, class: "form-control well well-sm", disabled: true %>
              </div>
              <br>
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-home fa-lg"></i></span>
                <%= f.text_field :address, class: "form-control well well-sm", disabled: true %>
              </div>
              <br>
              <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                <%= f.text_field :birthday, class: "form-control well well-sm", disabled: true %>
              </div>
              <br>
              <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-phone"></i></span>
                <%= f.text_field :phone, class: "form-control well well-sm", disabled: true %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
  </div>
</div>
